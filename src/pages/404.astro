---
import ThreeColumnLayout from '@layouts/ThreeColumnLayout.astro';
import { getSiteConfig } from '@utils/config';

const siteConfig = getSiteConfig();
---

<ThreeColumnLayout title={`404 - Page not found | ${siteConfig.title}`} description="The page you are looking for does not exist">
  <div class="flex flex-col items-center justify-center py-16 px-4 text-center">
    <div class="text-6xl mb-6">404</div>

    <p class="text-slate-500 dark:text-slate-400 mb-10">
      Path: <code class="bg-slate-100 dark:bg-slate-800 px-2 py-1 rounded">{Astro.url.pathname}</code>
    </p>
    
    <h1 class="mt-4 text-4xl font-bold mb-6">Oops! Page not found</h1>
    
    <p class="text-lg text-slate-600 dark:text-slate-300 mb-10">
      The page you're looking for seems to have wandered off.
    </p>
    
    <div class="mt-8 text-slate-500 dark:text-slate-400">
      <p>Looking for something specific? Try these popular links:</p>
    <div class="w-full max-w-md space-y-4">
      <a 
        href="/" 
        class="block w-1/2 mx-auto bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-lg text-center transition-colors"
      >
        Homepage
      </a>
      
      <a 
        href="/blog" 
        class="block w-1/2 mx-auto bg-slate-800 hover:bg-slate-700 text-white py-3 rounded-lg text-center transition-colors border border-slate-700"
      >
        Blog
      </a>
      
      <a 
        href="/categories" 
        class="block w-1/2 mx-auto bg-slate-800 hover:bg-slate-700 text-white py-3 rounded-lg text-center transition-colors border border-slate-700"
      >
        Categories
      </a>
    </div>
    </div>
  </div>
</ThreeColumnLayout> 